{
  "name": "google-ads-api-tests",
  "version": "1.0.0",
  "description": "Comprehensive test suite for Google Ads API client",
  "private": true,
  "scripts": {
    "test": "jest --config jest.config.js",
    "test:watch": "jest --config jest.config.js --watch",
    "test:coverage": "jest --config jest.config.js --coverage",
    "test:ci": "jest --config jest.config.js --ci --coverage --watchAll=false",
    "test:debug": "DEBUG_TESTS=true jest --config jest.config.js --verbose --no-cache",
    "test:client": "jest --config jest.config.js GoogleAdsClient.test.ts",
    "test:rate-limiter": "jest --config jest.config.js TokenBucketRateLimiter.test.ts",
    "test:errors": "jest --config jest.config.js errors.test.ts",
    "test:oauth": "jest --config jest.config.js --testNamePattern='OAuth2'",
    "test:rate-limiting": "jest --config jest.config.js --testNamePattern='Rate Limiting'",
    "test:error-handling": "jest --config jest.config.js --testNamePattern='Error Handling'",
    "test:edge-cases": "jest --config jest.config.js --testNamePattern='Edge Cases'",
    "test:integration": "jest --config jest.config.js --testNamePattern='Integration'",
    "test:performance": "jest --config jest.config.js --testNamePattern='Performance|Memory'",
    "test:security": "jest --config jest.config.js --testNamePattern='Security|Authentication'",
    "test:update-snapshots": "jest --config jest.config.js --updateSnapshot",
    "test:clear-cache": "jest --config jest.config.js --clearCache",
    "coverage:open": "open coverage/lcov-report/index.html",
    "coverage:serve": "npx http-server coverage/lcov-report -p 8080 -o",
    "lint:tests": "eslint **/*.test.ts **/*.spec.ts --fix",
    "type-check:tests": "tsc --noEmit --project tsconfig.test.json"
  },
  "jest": {
    "projects": ["<rootDir>/jest.config.js"]
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.5",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "google-ads",
    "api-client",
    "testing",
    "oauth2",
    "rate-limiting",
    "error-handling",
    "typescript",
    "jest"
  ],
  "author": "War Room Development Team",
  "license": "MIT"
}