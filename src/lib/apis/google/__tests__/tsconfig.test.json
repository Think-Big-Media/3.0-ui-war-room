{
  "extends": "../../../../tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": false,
    "declarationMap": false,
    "sourceMap": true,
    "outDir": "./coverage/tsc-out",
    "rootDir": "../",
    "baseUrl": "../",
    "paths": {
      "@/*": ["./*"],
      "~/*": ["./*"]
    },
    "types": ["jest", "@jest/globals", "node"],
    "typeRoots": ["../../../../node_modules/@types", "./types"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "allowJs": true,
    "checkJs": false,
    "incremental": true,
    "tsBuildInfoFile": "./coverage/.tsbuildinfo"
  },
  "include": ["../**/*.ts", "../**/*.tsx", "./**/*.ts", "./**/*.tsx", "./types/**/*.d.ts"],
  "exclude": ["../node_modules", "../dist", "../build", "./coverage", "**/*.js", "**/*.jsx"],
  "ts-node": {
    "esm": false,
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
